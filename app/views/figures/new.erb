<h1>Create a new Figure</h1>

<form action="/figures" method="POST">
  <label>Name:</label>

  <br></br>

  <input type="text" id="figure_name" name="figure[name]">

  <br></br>
  <label>Choose an existing title:</label>
  <br></br>
  <%Title.all.each do |title|%>
    <input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value="<%=title.id%>" id="<%=title.id%>"><%=title.name%></input>
  <%end%>

  <br></br>
  <label>or, create a new title</label>
  <br></br>
    <input type="text" id="new_title" name="title[name]"></input>
  <br></br>

  <br></br>
  <label>Choose an existing landmark:</label>
  <br></br>
  <%Landmark.all.each do |landmark|%>
    <input type="checkbox" id="landmark_<%=landmark.id%>" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="<%=landmark.id%>"><%=landmark.name%></input>
  <%end%>

  <br></br>
  <label>or, create a new landmark:</label>
  <br></br>
    <input type="text" id="new_landmark" name="landmark[name]"></input>
  <br></br>




  <input type="submit" value="Create New Figure">
</form>
